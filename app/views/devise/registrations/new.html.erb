<h1>Sign up</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

	<p><%= f.label :username, :class => "inlined" %>
  <%= f.text_field :username, :class => "input-text" %></p>

  <p><%= f.label :email, :class => "inlined" %>
  <%= f.text_field :email, :class => "input-text" %></p>

  <p><%= f.label :password, :class => "inlined" %>
  <%= f.password_field :password, :class => "input-text" %></p>

  <p><%= f.label :password_confirmation, :class => "inlined" %>
  <%= f.password_field :password_confirmation, :class => "input-text" %></p>

  <p><%= f.submit "Sign up" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>

<% content_for :page_js do %>
	<%= javascript_tag "Pooptrack.inline_input();"%>
<% end %>