<div id="header_wrapper">
	<div id="header" class="clearfix">
		<% if user_signed_in? %>
			<%= link_to "#{current_user.username} Home", user_root_path(:username => current_user.username), :id => "logo" %>
		<% else %>
			<%= link_to "Pooptrack Home", root_path, :id => "logo" %>
		<% end %>
		
		<div id="nav_user">
		<% if user_signed_in? %>
			<%= current_user.username %> | <%= link_to "Sign out", destroy_user_session_path%>
		<% else %>
			<%= link_to "Log in", new_user_session_path %> | <%= link_to "Sign up", new_user_registration_path %>
		<% end %>
		</div>	
	</div>
</div>

